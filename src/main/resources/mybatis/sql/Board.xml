<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wizard.pracmybatis.repository.BoardRepository">

    <select id="getList" parameterType="com.wizard.pracmybatis.domain.Board"
            resultType="com.wizard.pracmybatis.domain.Board">
        SELECT B.BOARD_SEQ,
               B.TITLE,
               B.COMTENTS,
               B.REG_DATE
        FROM T_BOARD B
        ORDER BY B.REG_DATE DESC
    </select>

    <select id="get" parameterType="int"
            resultType="com.wizard.pracmybatis.domain.Board">
        SELECT B.BOARD_SEQ,
               B.TITLE,
               B.COMTENTS,
               B.REG_DATE
        FROM T_BOARD B
        WHERE B.BOARD_SEQ = #{boardSeq}
    </select>

    <insert id="save" parameterType="com.wizard.pracmybatis.domain.Board">
        INSERT INTO T_BOARD
        (TITLE,
         CONTENTS,
         REG_DATE)
        VALUES (#{title},
                #{contents},
                NOW())
    </insert>

    <update id="update" parameterType="com.wizard.pracmybatis.domain.Board">
        UPDATE T_BOARD
        SET
            TITLE = #{title},
            CONTENTS = #{conten}
    </update>

    <select id="get" parameterType="int"
            resultType="com.wizard.pracmybatis.domain.Board">
        SELECT B.BOARD_SEQ,
               B.TITLE,
               B.COMTENTS,
               B.REG_DATE
        FROM T_BOARD B
        WHERE B.BOARD_SEQ = #{boardSeq}
    </select>
</mapper>